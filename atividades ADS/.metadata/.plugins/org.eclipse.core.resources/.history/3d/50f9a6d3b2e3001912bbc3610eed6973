
public class exercicio19 {

	public static void main(String[] args) {
		
		double raio = 0;
		double volume = 0;
		double pi = 3.14;
		for (int i = 0; raio < 20; i++) {
			raio += 0.5;
			volume = (4 * pi * Math.pow(raio, 3)) / 3;
			System.out.println("O volume da esfera com raio igual :"+raio+" é de :"+volume+"\n");
		}
		
	}
}
